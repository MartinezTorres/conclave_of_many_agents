#!/usr/bin/env node

/**
 * Claude-COMA Binary
 * Executable wrapper for the main COMA script
 */

import { spawn } from 'child_process';
import path from 'path';
import { fileURLToPath } from 'url';

const __dirname = path.dirname(fileURLToPath(import.meta.url));
const comaScript = path.join(__dirname, '..', 'src', 'claude-coma.js');

// Execute the main script with all arguments
const child = spawn('node', [comaScript, ...process.argv.slice(2)], {
  stdio: 'inherit'
});

child.on('exit', (code) => {
  process.exit(code);
});